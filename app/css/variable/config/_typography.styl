//  ============================ Typography ============================

//webfont('RUB', 'rouble-webfont', 'normal')
//Add fotn rub write .rub a - (a,b,c,d - change type font)

//font(name,file,size)
font('Montserrat','Montserrat-Bold',700)
font('Montserrat','Montserrat-Regular',400)
$v-font =  'Montserrat', sans-serif

typeSize(fontSm,font)
	+below(768px)
		font-size font px
	font-size fontSm px

/*
font-size 12px
@extend .type--xs

font-size 15px
@extend .type--sm

font-size 18px
@extend .type--main

font-size 24px
@extend .type--md

font-size 36px
@extend .type--lg

font-size 48px
@extend .type--xl
*/

.type--xs
	typeSize(12,12)

.type--sm
	typeSize(15,13)

.type--main
	typeSize(18,16)

.type--md
	typeSize(24,18)

.type--lg
	typeSize(36,24)

.type--xl
	typeSize(48,32)

.type--mark
	color $mark

.type--red
	color $red

.type--gray
	color $gray


.type--bold
	font-weight bold

.type--center
	text-align center

.title
	margin-bottom: 30px
	font-weight: 700
	line-height: 1.4
.title--sm
	@extend .type--sm

.title--main
	@extend .type--main

.title--md
	@extend .type--md

.title--lg
	@extend .type--lg

.title--xl
	@extend .type--xl

.title--clear
	margin-bottom: 10px

h5
	@extend .type--sm
h4
	@extend .type--main
h3
	@extend .type--md
h2
	@extend .type--lg
h1
	@extend .type--xl

a
	color $link-color
	text-decoration: none
	tr()
	&:hover
		color darken($link-color,20)
	&:visiter
		color darken($link-color,30)

p
	@extend .type--main

.link--mark
	color $mark
	&:hover
		color darken($mark,20)
	&:visiter
		color darken($mark,30)

.link--main
	color $link-color
	hover-underline($link-color)
	&:hover
		color darken($link-color,20)
	&:visiter
		color darken($link-color,30)

.link--text
	color $link-color
	text-decoration underline
	&:hover
		text-decoration none

.text
	p
		line-height: 1.6
		margin-bottom: 30px
	ul
		margin-bottom: 30px
		padding-left: 20px
		list-style none
		li
			line-height: 1.6
			position relative
			&:before
				content ''
				position absolute
				top 12px
				left -14px
				size 6px
				round()
				background: $gray
			&:last-child
				margin-bottom: 0

// icons
.icon-row
	f()
	fw()
	align-items center

.icon--sm
	size 16px

.icon--md
	size 24px

.icon--lg
	size 30px

.icon--left
	margin-left: 10px

.icon--right
	margin-right: 10px

.icon--mark
	fill $mark

.icon--gray
	fill $gray
// icons === end

// title rows
.title-row
	+below(640px)
		margin-bottom: 30px
		//flex-wrap nowrap
		align-items: flex-start
	position: relative
	font-weight: 700
	margin-bottom: 30px
	f()
	fw()
	align-items center
	.icon
		+below(768px)
			size 25px
		tr(all)
		size 50px
		fill $mark
		&:hover
			fill black
	.title
		+below(640px)
			width: 100%
			margin-right: 0
		margin-bottom: 0
		margin-right: 20px
		margin-top: -5px
	.arrow
		+below(640px)
			display none
		fill $mark
		margin-right: 25px
	.size
		+below(768px)
			width: 100%
			margin: 0
			margin-top: 20px
		margin-left auto
		width: 30%
.arrow
	flex(mid)
	flex(mid)
	tr()
	cp()
	br(10px)
	size 50px
	border 2px solid $mark
	&:hover
		background: $mark
		.icon
			fill white
	&:active
		.icon
			fill $red!important
	.icon
		tr()
		size 14px
		fill $mark
.title-row--btn
	+below(768px)
		fw()
	flex(between)
.title-row-info
	+below(768px)
		margin-bottom: 20px
		width: 100%
	f()
	align-items center
// title rows === end

// sale-item
.info-banner
	+below(768px)
		margin: 0 0 30px 0
		padding: 20% 10%
		br(0)
		margin-left: -10px
		width calc(100% + 20px)
	bg-full()
	br(20px)
	padding: 15% 10%
	margin 0 0 50px 0

.sale-date
	f()
	@extend .type--sm
	align-items center
	color $gray
	margin-bottom: 30px
	.icon
		size 20px
		fill $gray
		margin-right: 10px

.info-descr
	+below(768px)
		padding-left: 0
		margin-top: 0
	padding-left: 75px
	margin-top: -20px
	margin-bottom: 50px
// sale-item === end