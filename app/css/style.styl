//=== Внешний вид пагинации ===
.slick-dots
	+below(720px)
		bottom -20px
	width: 100%
	display: flex !important
	align-items: center
	justify-content: center
	bottom -50px
	li
		+below(720px)
			size 10px
			flex(mid)
	.dot
		+below(1024px)
			flex(mid)
			size 8px
		background: white
		size 15px
		display: block
		opacity: .8
		round()
		border 1px solid $border-color
	.slick-active
		.dot
			opacity: 1

