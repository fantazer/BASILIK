	margin-bottom: 0

//=== Внешний вид пагинации end===



// === Для центрального вида ===



.name-slider
	.slick-slide
		opacity: .8
	.slick-list
		padding: 100px 80px!important
	.slick-slide
		margin: 0 20px
.slider-list
	.slick-slide
		margin: 0 15px
	.slick-list
		margin: 0 -15px
