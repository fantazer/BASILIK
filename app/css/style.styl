.restaurant-item__title
	font-weight 700
	line-height: 1.6
	margin-bottom: 10px
	display: block
.restaurant-item__time
	color $gray
	@extend .type--sm
	line-height: 1.4
	margin-bottom: 5px
	&:last-child
		margin-bottom: 0

// restaurant === end

// ==== restaurant FULL
.cafe-item
	+below(768px)
		fw()
		margin-bottom: 0
	f()
	justify-content: space-between
	margin-bottom: 50px
.cafe-item__img-wrap
	+below(768px)
		width: 100%
		margin-bottom: 10px
	width: 55%
.cafe-item__img-el
	+below(768px)
		margin-bottom: 20px
	bg-full()
	padding: 30% 10%
	br(20px)
.cafe-item__cont
	+below(768px)
		width: 100%
	width: calc(45% - 40px)
.cafe-item__title
	+below(1024px)
		font-size: 28px
	+below(768px)
		font-size: 24px
	+below(640px)
		margin-bottom: 10px
		font-size: 20px
	color $dark
	@extend .type--md
	font-weight 700
	margin-bottom: 20px
.cafe-item__time
	+below(640px)
		margin-bottom: 20px

	margin-bottom: 20px
	span
		display: block
		margin-bottom: 10px
		@extend .type--sm
		color $gray
.cafe-item__phone
	display: block
	color $dark
	@extend .type--md
	font-weight: 700
	margin-bottom: 10px
.cafe-item__phone-text
	margin-bottom: 30px
	color $gray
	@extend .type--sm
.cafe-item__text
	+below(768px)
		margin: 0
	padding-right: 20px
.cafe-item__adv
	f()
	align-items center
	margin-bottom: 20px
.cafe-item__adv-icon
	.icon
		fill $mark
		size 28px
		margin-right: 20px
//.icon
.cafe-item__adv-text
	font-weight: 700
.cafe-get
	@extend .btn--lg
	@extend .btn--light
	margin: 20px 0
	padding: 15px 40px
	font-weight: 700
// ==== restaurant FULL === end

// gallery
.gallery__el
	bg-full()
	padding: 40% 10%
	br(10px)
.gallery__el-nav
	bg-full()
	br(10px)
	cp()
	padding: 40% 10%

.gallery-slider-nav
	.slick-slide
		+below(640px)
			margin: 0 5px
		margin: 0 10px
	.slick-current
		tr()
		opacity: .4
	.slick-track
		margin-left: 0px
	.slick-list
		+below(640px)
			margin: 0 -5px
		margin: 0 -10px
.gallery-slider
	margin-bottom 10px

// gallery === end

// guests
.guests
	+below(768px)
		column-gap 20px
	+below(480px)
		column-count 1
	column-count 2
	column-gap 40px
	//grid-template-columns: repeat(auto-fill, minmax(12rem,1fr))
.guests__el
	+below(768px)
		margin-bottom: 20px
	br(10px)
	position relative
	margin-bottom: 40px
.guests-info
	+below(640px)
		font-size: 12px
		padding: 10px
	position absolute
	border-radius 0 10px 0 10px
	background: #1d1d1bb0
	color white
	z-index 2
	left 0
	bottom 0
	padding: 12px 30px
	a
		color $mark
.guests-msg
	margin: 30px auto 0 auto
	flex(mid)
	fl()
	img
		margin-bottom: 20px
.guests-msg-text

	text-align center
	line-height: 1.4
	font-weight: 700
// guests === end

.location-list-wrap
	position relative
	+above(1024px)
		&:before
			z-index 10
			content ""
			position absolute
			bottom -15px
			left 0
			background-image: linear-gradient(180deg, rgba(255, 255, 255, 0) 0%, #ffffff 100%);
			width: 100%
			height: 90px

.location-list
	+below(768px)
		padding-bottom: 40px
	max-height 300px
	position relative
	padding-right: 40px
	width calc(100% + 40px)
	margin-right: -40px
	padding-bottom: 60px
.location-list__el
	@extend .btn--md
	@extend .btn--light
	font-size: 15px
	display block
	margin-bottom: 10px
.location-list__el--active
	background: $mark

.mobile--hidden
	+below(640px)
		display none

// sale-item
.info-banner
	+below(768px)
		padding: 20% 10%
		br(0)
		margin: -30px -10px 30px -10px
		width calc(100% + 25px)
	bg-full()
	br(20px)
	padding: 15% 10%
	margin 0 0 50px 0

.sale-date
	f()
	@extend .type--sm
	align-items center
	color $gray
	margin-bottom: 30px
	.icon
		size 20px
		fill $gray
		margin-right: 10px

.info-descr
	+below(768px)
		padding-left: 0
		margin-top: 0
	padding-left: 75px
	margin-top: -20px
	margin-bottom: 50px
// sale-item === end

// cookie
.cookie
	position: fixed
	bottom 20px
	left 0
	width: 100%
	transform translateY(10px)
	opacity: 0
	z-index -1
	tr()
.cookie--active
	z-index 20
	opacity: 1
	transform translateY(0)
.cookie-wrap
	padding: 15px 20px
	br(20px)
	z-index 10
	background: white
	f()
	justify-content: space-between
	border 1px solid $border-color
	.icon
		&:hover
			fill black
		tr()
		size 14px
		margin-left: 10px
		fill $gray
		cp()
.cookie-text
	width calc(100% - 30px)
	font-size: 12px
// cookie === end