// slick === end


// main slider
.main-slider__el
	+below(640px)
		padding: 60% 10%
	display: block
	bg-full()
	padding: 13% 10%
	//height: 500px
	width: 100%

.main-slider__el--md
	+below(640px)
		display none
.main-slider__el--sm
	+above(640px)
		display none

.main-slider
	+below(768px)
		margin-bottom: -10px
	margin-bottom: 40px


.slider-wrap--main
	+below(768px)
		margin-bottom: -20px
// main slider === end

// kind
.kind
	+below(640px)
		grid-template-columns: repeat(2, 1fr)
		grid-gap 10px
		margin-bottom: 15px
	+below(480px)
		grid-template-columns: 1fr

	display: grid
	grid-gap 20px
	grid-template-columns: repeat(4, 1fr)
	margin-bottom: 30px
.kind__el
	+below(640px)
		br(10px)
	position relative
	bg-full()
	padding: 30% 10%
	tr()
	br(10px)
	bsh-hover()
	overflow hidden
	&:before
		content ''
		position absolute
		top 0
		left 0
