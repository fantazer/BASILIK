.slider-wrap
	position relative

//Навигация снаружи
.slider-wrap--simple
	.slider-control
		+below(678px)
			display none
		flex(mid)
		tr(all)
		cp()
		br(4px)
		position: absolute
		top 50%
		margin-top: -25px
		z-index 10
		background: white
		size 50px
		border 1px solid $border-color
