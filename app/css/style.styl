@import 'rupture'
@import "variable/_function.styl"
@import "variable/_ie.styl"
@import "variable/_helper.styl"
@import "variable/_default.styl"
@import "variable/config/_color.styl"
@import "variable/config/_typography.styl"
@import "variable/config/_btn.styl"
@import "variable/config/_input.styl"
@import "../module/**/*"

body
	@extend .type--main
	font-family $v-font
	color $main-text-color
	line-height 1.2
	letter-spacing 0.01em

.main-cont
	center(1200px,10px)

.page
	f()
	fl()
	min-height 100vh

.content
	flex-grow 1
	padding: 30px 0 50px 0
.content--mid
	flex(mid)

// animate top menu
@keyframes slideInDown
	from
		transform: translate3d(0, -100%, 0)
		visibility: visible;
	to
		transform: translate3d(0, 0, 0)

.shrink
	position fixed
	top 0
	left 0
	background white
	width 100%
	margin 0
	animation:  slideInDown  1s 1 ease-in-out;
	z-index 100
	.header-top
		display none
	.header-logo
		img
			width: 100px
	.header-logo--desc
		display none
	.header-logo--mobile
		display block
// animate top menu === end

// error
.page-error
	flex(mid)
	fl()
	height: 100%
.page-error__title
	@extend .type--xl
	margin-bottom: 30px
	font-weight: 700
	color $gray
.page-error__img
	margin-bottom: 30px
	max-width 640px
.page-error__text
	@extend .type--md
	color $gray
	margin-bottom: 30px
.page-error__get
	@extend .btn--md
	@extend .btn--mark
// error === end

// modal
.modal-layer
	width: 100%
	height: 100vh
	position: fixed
	z-index 1000
	top 0
	left 0
	visibility: hidden
	transition all 1s // duration for fade
	opacity 0

.modal-layer-show
	visibility: visible
	opacity 1

.modal-cont
	width: 100%
	height: 100%
	position: relative
	max-height 100%
	overflow: auto

.modal-filter
	position: absolute
	top: 0
	left: 0
	background: #18191da1
	width: 100%
	height: 100vh
	min-height 100vh

.modal
	+below(640px)
		width: 100%
		box-shadow 0 0 0
	transform scale(.9) translateZ(0) translate3d(0, 0, 0)
	will-change: transform, opacity;
	backface-visibility: hidden
	position: absolute
	opacity 0
	transition transform .6s, opacity .8s
	width 420px
	left -9999px
	top -9999px
	.order__row
		margin-bottom: 20px
		border-bottom 0
.modal--xl
	+below(960px)
		width: 100%
	width 860px

.modal-content
	+below(640px)
		height: 100%
		padding: 30px 20px
		overflow-y scroll
		width: 95%!important
		margin: 20px auto
	background: white
	position: relative
	padding: 40px 45px
	br(10px)
	margin: 20px auto

.modal__show
	max-height 100%
	opacity 1
	transform scale(1) translateZ(0) translate3d(0, 0, 0)
	position: relative
	z-index 1000
	left initial
	top initial
	transition transform .6s, opacity .8s
	will-change: transform, opacity

.modal-close
	+below(768px)
		top 0
		right 0
		size 40px
		border-radius 0 10px 0 0
	position: absolute
	top: 10px
	right: 10px
	cp()
	size 50px
	br(10px)
	flex(mid)
	z-index 10
	background: #f8f8f8
	&:hover
		.icon
			opacity: 1
	.icon
		tr()
		size 12px
		fill black
		opacity:.3

.modal-hide-animation
	transform scale(.9)
	opacity 0
	transition transform .6s, opacity .8s
.modal-open
	overflow: hidden
	overflow-y: scroll
	position: fixed
	top: 0
	left: 0
	right: 0
	bottom: 0
	width: 100%

.modal-wrap
	position: fixed
	width: 100%
	height: 100%
	overflow-y auto
	flex(mid)

.modal-title
	+below(768px)
		font-size: 20px
	margin-bottom: 20px
	text-align: center
	font-weight: 700
	font-size: 32px

.modal-text
	+below(768px)
		width: 100%
		font-size: 12px
	text-align: center
	margin: 20px auto
	//width: 80%
	line-height: 1.6
	@extend .type--sm

.modal-send
	@extend .btn--md
	@extend .btn--mark
	width: 100%

.modal-link
	color $mark
	border-bottom 1px dashed $mark
	display table
	margin: 20px auto 0 auto
	cp()
	@extend .type--sm
.modal-link--auth
	margin: 0
	margin-top: -10px
	margin-bottom: 20px
	cp()
.modal-content--dark
	background: black
	.modal-title
		color white
	.modal-text
		color white
.modal-img
	margin: 0 auto 20px auto
	flex(mid)

// review modal
.get-rating
	f()
	align-items: center
	.icon
		cp()
	margin-bottom: 20px
.get-rating-text
	+below(640px)
		font-size: 13px
	margin-right: 20px
	font-weight: 700

.star-el--active
	.icon
		fill red!important

.star
	f()
	.icon
		size 20px
		cp()
		fill $border-color
.star-el
	margin-right: 5px
// review modal === end

.modal-bonus
	position relative
	//max-height 500px
	padding-right: 20px
	margin-right: -20px
	width calc(100% + 20px)

// modal === end

// cookie
.cookie
	position: fixed
	bottom 20px
	left 0
	width: 100%
	transform translateY(10px)
	opacity: 0
	z-index -1
	tr()
.cookie--active
	z-index 20
	opacity: 1
	transform translateY(0)
.cookie-wrap
	bsh()
	padding: 15px 20px
	br(20px)
	z-index 10
	background: white
	f()
	justify-content: space-between
	.icon
		&:hover
			fill black
		tr()
		size 14px
		margin-left: 10px
		fill $gray
		cp()
.cookie-text
	width calc(100% - 30px)
	font-size: 12px
// cookie === end

// drop
.dropdown
	width: 100%
	display inline-block
	br(10px)
	tr()
	position relative
	border 1px solid $border-color
	outline none!important
.dropdown-current
	cursor pointer
	display block
	padding 18px 30px
	padding-right 55px
	.icon
		position absolute
		top calc(50% - 6px)
		right 15px
		size 12px
		tr()

.dropdown.active
	border-radius 4px 4px 0 0
	.icon
		transform rotate(180deg)

.dropdown-menu
	position absolute
	background-color #fff
	width calc(100% + 2px)
	left -1px
	margin-top -1px
	border-radius 0 0 4px 4px
	overflow hidden
	display none
	max-height 200px
	overflow-y auto
	z-index 10
	border 1px solid $border-color
.dropdown-menu__el
	padding 10px 30px
	cp()
	tr()
	border-bottom 1px solid $border-color
	//background: #f9f9f9
	&:last-child
		border 0
	&:hover
		background: white
		color black
.dropdown--light
	+below(768px)
		border 1px solid $border-color
	border 0
	@extend .type--sm
	.dropdown-menu
		+below(768px)
			margin-top:0
		margin-top: 10px
	.dropdown-current
		+below(768px)
			padding: 10px 35px 10px 10px

		padding: 0 35px 0 10px
		border 0
	.dropdown-menu__el
		padding 10px
// drop === end

.noty-wrap
	+below(1024px)
		position: fixed
		z-index 10
		top 50px
		left 0
		tr()
	background: $dark
	padding: 7px 0

.noty-wrap--hidden
	transform translateY(100%)
.noty
	+below(768px)
		fw()
		padding: 10px
	f()
	align-items center
.noty__text
	+below(768px)
		width: 100%
		margin-bottom: 10px
	line-height: 1.4
	color $gray
	font-family Montserrat
	@extend .type--sm
	margin-right: 30px
.noty__get
	margin-right: 20px
.noty__close
	cp()
	margin-left auto
	flex(mid)
	.icon
		&:hover
			fill white
		tr()
		size 36px
		fill #707070

// header

.header-wrap
	+below(1024px)
		height: 50px
	f()
	border-bottom 1px solid $snow
.header-logo
	+below(1280px)
		width: 75px
		padding: 0 10px

	width: 180px
	flex(mid)
	border-right 1px solid $snow
.header-logo--mobile
	display none
.header-cont
	+below(1280px)
		width calc(100% - 45px)
	width calc(100% - 180px)
.header-top
	+below(1280px)
		display none
	@extend .type--sm
	f()
	background: $snow
	width: 100%
	align-items center
	padding: 15px 30px
.header-cart
	+below(1024px)
		margin-right: 20px
		margin-left auto
	+below(640px)
		margin-right: 5px
		border-left 1px solid $border-color
		padding: 0 10px
	height: 50px
	position relative
	z-index 10
	f()
	align-items center
	.icon
		+below(640px)
			margin-right: 0
			size 24px
		fill $red
		margin-right: 15px
		size 30px
.header-cart__cost
	+below(640px)
		display none
	font-weight 700
	white-space nowrap
.header-cart__size
	+below(1280px)
		size 20px
		font-size: 12px
		transform translateY(-10px)
		margin-left: 5px
	+below(640px)
		position absolute
		top 5px
		right: 0
		transform translateY(0px)
		size 16px
		font-size: 10px
	size 50px
	background: $red
	color white
	flex(mid)
	br(5px)
	margin-left: 10px
	font-weight: 700
.search
	+below(1024px)
		display none
	position relative
	margin: 0 20px
	margin-left auto
	background: white
	.icon
		size 20px
		fill $gray
		cp()
		position absolute
		top calc(50% - 10px)
		left: 10px
.search-wrap
	@extend .type--sm
	.input
		padding-left: 40px
		height: 50px
.header-location
	f()
	align-items center
	position relative
	.icon
		size 22px
		fill $mark

.header-work__time
	+below(1600px)
		display none
	color $gray
	margin: 0 15px
.nav-top
	+below(1600px)
		width: 60%
	flex(between)
	margin: 0 auto
	width: 50%
.nav-top__el
	+below(1440px)
		font-size: 12px
	&:hover
		color $mark
.auth
	margin: 0 20px
	cp()
	span
		tr()
	&:hover
		color $mark
	.icon
		fill $mark

.auth-img
	size 24px
	round()
	bg-full()
	margin-right: 10px
.lang
	f()
.lang__el
	margin-left: 10px
	color $gray
.lang__el--active
	color black
.header-main
	+below(1280px)
		padding: 15px 10px
	+below(1024px)
		padding: 0
	+below(640px)
		align-items: stretch
	f()
	align-items center
	padding: 10px 30px
.header-nav
	+below(1024px)
		display none
	flex(between)
	color $dark
	font-weight 700
	width: 80%
	margin-right: 20px
	a
		&:hover
			color $mark
.header-nav__el
	white-space nowrap
	+below(1440px)
		font-size: 14px
.header-nav__el--mobile
	+below(1600px)
		display none
.header-nav__more
	position relative
	border-bottom 2px dashed gray
	cp()
	white-space nowrap
	+below(1440px)
		font-size: 14px
.header-nav-sub
	display none
	position absolute
	top calc(100% + 10px)
	left -10px
	box-shadow 0 0 10px rgba(0, 0, 0, 0.07)
	border-radius 10px
	background-color #ffffff
	padding 20px
	br(10px)
	z-index 10
	a
		display block
		margin-bottom: 10px
		&:last-child
			margin-bottom: 0
.header-nav-sub__el--mobile
	+above(1600px)
		display none!important
// header === end

// slide menu
.header-menu-btn
	+below(1024px)
		width: 100%
		br(0)
		height: 100%
		flex(mid)
	+below(640px)
		padding: 0
		width: 50px
		span
			display none
	@extend .btn--mark
	@extend .btn--md
	f()
	align-items center
	padding: 12px 20px
	line-height: 1
	display none
	.icon
		+below(640px)
			margin-right: 0
		fill white
		size 20px
		margin-right: 10px

.header-nav-toggle
	+above(1025px)
		display none
	flex(mid)
	size 50px
	border-left 1px solid $border-color
	.icon
		size 24px
.is-open
	display none

.slide-block-toggle--open
	.is-close
		display none!important
	.is-open
		display block!important
	.header-cart__icon
		.is-close
			display none


.slide-block
	+below(1280px)
		top: 50px //Высота хедера
		height: calc(100% - 50px)
	+below(480px)
		width: 100%
	position: fixed
	top 90px
	width: 360px
	tr(all)
	border-right 1px solid $border-color
	height: calc(100% - 90px)
	background: white
	z-index 100
.slide-block-wrap
	overflow-y auto
	height: 100%
	padding: 10%
	.header-location
		margin-bottom: 20px
	.auth
		margin:0 0 20px 0
	.size
		margin-bottom: 20px
.slide-menu__list
	f()
	fl()
	align-items: flex-start
	.header-nav__el
		display inline
		margin-bottom: 20px
		font-weight: 700
.slide-menu-nav__el
	display block
	margin-bottom: 20px

.slide-menu-nav__el--light
	color $gray

.header-nav__el--light
	font-weight: 400
.slide-block--left
	left 0
	transform translateX(-100%)

.slide-block--right
	right 0
	transform translateX(100%)

.slide-block--open
	transform translateX(0%)

.slide-block--cart
	border-left 1px solid $border-color

.slide-menu__list-el
	display: block
	margin-bottom: 10px
	tr(all)
	color $dark
	@extend .type--md
	font-weight 700
	&:hover
		color red
.body-fix
	position: fixed!important
	overflow-Y: scroll!important
	width:100%!important

.header-contact
	f()
	align-items center
	margin-bottom: 20px
	.icon
		fill $mark
		size 24px
		margin-right: 15px

.header-contact__loc
	color $dark
	white-space nowrap
	font-weight 700
	display inline-block
	margin-bottom: 5px
	&:hover
		color $mark
.header-contact__time
	+below(1560px)
		font-size: 12px
		white-space nowrap
	color $gray
	whtie-space nowrap

// slide menu === end

.bubble-loc
	position: absolute
	top calc(100% + 20px)
	left 0
	background: white
	box-shadow 0 0 10px rgba(0, 0, 0, 0.1)
	border-radius 10px
	overflow hidden
	z-index 100
.bubble-loc__title
	padding: 15px 20px
	white-space nowrap
.bubble-loc__footer
	f()
.bubble-loc__footer--true
	color white
	background: $dark
	padding: 15px 30px
	cp()
	tr()
	&:hover
		background: darken($dark,10)
.bubble-loc__footer--false
	white-space nowrap
	background: $snow
	padding: 15px 30px
	cp()
	tr()
	&:hover
		background: darken($snow,10)

.cart-bubble-wrap
	+below(640px)
		right: -50px
		top calc(100% + 10px)
	position: absolute
	top calc(100% + 20px)
	right 0
	background: white
	box-shadow 0 0 10px rgba(0, 0, 0, 0.1)
	br(10px)
	overflow hidden
.cart-bubble
	+below(640px)
		width: calc(100vw - 10px)
	flex(mid)
	padding: 20px
	background: white
	z-index 100
	width: 360px
	line-height: 1.4
	.icon
		fill $mark
		size 42px
		margin-right: 20px
	span
		display inline-block
		width calc(100% - 60px)
		@extend .type--sm

// size
.size
	display: grid
	grid-gap 0
	grid-template-columns: repeat(auto-fit, minmax(3rem,1fr))
	br(10px)
	border 1px solid $gray-light

.size--mark
	border 1px solid $mark
	.size__el--active
		background: $mark
		color white!important
	.size__el
		+above(641px)
			border-right 1px solid $mark
		&:last-child
			border 0

.size--lg
	br(10px)
	.size__el
		padding: 20px 10px
		font-weight: 700
		border-left 1px solid $gray-light
		border-right 1px solid $gray-light
		color black
		&:first-child
			border-radius 10px 0 0 10px
			border 0
		&:last-child
			border-radius 0 10px 10px 0
			border 0

.size--column
	+below(640px)
		fw()
		.size__el
			width: 100%
			border-radius 10px!important

.size--sm
	display: inline-flex
	.size__el
		padding: 8px 20px


.size--fluid
	@extend .size--lg
	f()
	.size__el
		flex-grow 1
		font-weight: 700
		font-size: 14px

.size__el
	+below(480px)
		font-weight:700
	cp()
	tr()
	font-size: 14px
	padding: 10px
	text-align: center
	line-height: 1
	border-left 1px solid $gray-light
	border-right 1px solid $gray-light
	border-color $gray-light!important
	color $gray
	&:first-child
		border-radius 10px 0 0 10px
		border 0
	&:last-child
		border-radius 0 10px 10px 0
		border 0
	&:hover
		border-color $mark
.size__el--active
	background: $gray-light
	color black
// size === end

// soc row
.soc-row
	f()
.soc-row__el
	round()
	flex(mid)
	tr(all)
	margin-right: 10px
	size 30px
	background: black
	&:hover
		background: $mark
	.icon
		size 14px
		fill white
.soc-row__el--red
	background: $red
// soc row === end


