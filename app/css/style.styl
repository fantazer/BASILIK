	.slider-control--right
		+below(1440px)
			right -25px
		+below(1200px)
			display none
		right -80px

//Навигация снаружи end

//Навигация внутри
.slider-wrap--inarrow
	.slider-control
		+below(678px)
			display none
		flex(mid)
		tr(all)
		cp()
		round()
		position: absolute
		top 50%
		margin-top: -25px
		z-index 10
		background: white
		opacity: .5
		size 50px
		&:hover
			opacity: 1
		.icon
			size 15px
