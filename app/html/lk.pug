include block_html/_style.pug
include block_html/_include.pug

.page
	+header()
	.content.content--gray
		//product-cont
		.main-cont
			.lk
				.lk-toolbar
					.profile
						.profile__img
							//for user img
							.profile__img-el(style="background-image:url('img/user.jpg')").hidden
							.profile__img-icon
								+icon("user","icon")
							.profile__img-load
								.profile__img-load-icon
									+icon("upload","icon")
						.profile-wrap
							.profile__name Константин
							.profile-row
								.profile-row__name телефон
								.profile-row__val +7 (865) 543 45 45
							.profile-row
								.profile-row__name e-mail
								.profile-row__val prosto_vlad@gmail.com
							.profile-row
								.profile-row__name день рождения
								.profile-row__val 06.09.1991
							a(href="#").profile-change
								+icon("edit","icon")
								span изменить информацию
							.profile-footer
								.profile-footer-info
									.profile-footer__text.hidden у вас нет бонусов
										// for bonus = 0
									.profile-footer__text мои бонусы:
									.profile-footer__val 2500
								.profile-footer__icon
									+icon("info","icon")
					a(href="#").exit
						.icon-block.icon-block--mark
							+icon("exit","icon")
						span Выйти
				.lk-info
					.lk-info__el.box
						.title.title--lg Мои адреса
						.address-wrap
							.address__el
								.address__type Дом
								.address__val Москва, ул. Петропавловская, д. 101, корп. 1, кв. 25, подъезд 8
								.address-footer
									.address-footer__el.address-edit
										+icon("edit","icon")
										span Редактировать
									.address-footer__el.address-remove
										+icon("trash","icon")
										span Удалить
							.address__el
								.address__type Работа
								.address__val Москва, ул. Петропавловская, д. 101, корп. 1, кв. 25, подъезд 8
								.address-footer
									.address-footer__el.address-edit
										+icon("edit","icon")
										span Редактировать
									.address-footer__el.address-remove
										+icon("trash","icon")
										span Удалить
							.address__add
								.icon-block.icon-block--empty
									+icon("plus","icon")
								span добавить адрес
					.lk-info__el.box
						.title.title--lg История заказов
						.history
							- for (var j=0;j<5;j++)
								.history-card
									.history-card__wrap
										.history-card__info
											.history-card__date 28 Сентября, 2017
											.history-card__numb № 43576
										.history-card__list
											- for (var i=0;i<3;i++)
												a(href="#" style="background-image:url('img/item-1.jpg')").history-card__list-el
													.history-card__list-el-val x2
											.history-card__list-el.history-card__list-el--last(style="background-image:url('img/card.jpg')")
												.history-card__list-el-val +2
										.history-card__price
											.history-card__price_val 5430 ₸
									.history-info
										.history-info__head
											.history-info__head-date 28 Апреля 2017
											.history-info__head-state Доставлен
											.history-info__head-numb № 43576
										- for (var k=0;k<4;k++)
											.history-info__list
												.history-info__el
													a(href="#" style="background-image:url('img/item-1.jpg')").history-info__el-img
													.history-info__el-about
														.history-info__el-title Гавайская с курицей
														.history-info__el-text Традиционное, 35 см
													.history-info__el-count x2
													.history-info__el-price 680 ₸
										.history-info-footer
											.history-info-total
												.history-info-total__text Сумма:
												.history-info-total__val 1 184 ₸
											.history-info-get
												+icon("refresh","icon")
												span Повторить заказ
							.history-more
								+icon("refresh","icon")
								span показать еще
							.order-empty.hidden
								.order-empty-icon
									img(src="img/anxiety.svg", alt="")
								.order-empty-title Ваша история пуста =(
								.order-empty-text Сделайте заказ
								.btn--md.btn--mark Посмотреть меню

	+footer()
include ./block_html/_script.pug
