include block_html/_style.pug
include block_html/_include.pug

.page
	+header()
	.slider-wrap.slider-wrap--main.slider-wrap--inarrow
		.slider-control.slider-control--left
			+icon("arrow-left-fat","icon")
		.slider-control.slider-control--right
			+icon("arrow-right-fat","icon")
		.main-slider.slider-item
			- for (var i=0;i<4;i++)
				.main-slider__el-wrap
					a(href="#" style="background-image:url('img/slide-1.jpg')").main-slider__el.main-slider__el--md
					a(href="#" style="background-image:url('img/slide-2.jpg')").main-slider__el.main-slider__el--sm
	.content
		.main-cont
			.kind
				each item,i in kind
					a(href="#" style="background-image:url('img/kind-"+(i+1)+".jpg')").kind__el
						.kind__el-title #{item}
			.kind-sm
				-
					var items = [
						'Соусы',
						'Десерты',
						'Напитки',
						'Дополнительно',
						'Замороженная продукция'
						];
				each item,i in items
					a(href="#" style="background-image:url('img/btn-bg-"+(i+1)+".jpg')").kind__sm-el
						span #{item}

			//NOTE !!! colors tags => Классика - #111415; Вок - #45010b; Шоколадно - #6d2200; Хит - #b40007; Остро - #ff3d00; Новинка - #fe54a1; По-новому - #ffc400; Полезно - #ff9900; Микс - #afcb08; Летний - #65be05; Basilic - #3ead48; Шалом - #006e35; После еды - #00b49b; Рыбно - #3070b9; Популярно - #4032a2; Домашние - #8e00c1;

			.section-title.mobile--hidden Блюда на компанию
			.product-cont.mobile--hidden
				- for (var i=0;i< 7;i++)
					+product()

			.section-title.mobile--hidden Завтраки
			.product-cont.mobile--hidden
				- for (var i=0;i< 6;i++)
					+product("item-4.jpg")
			.btn-row-mid
				a(href="#").product-more.btn--sm.btn--light.btn--mobile показать еще

		.app-wrap
			.main-cont
				.app
					.app-img
						img(src="img/app-phone.png", alt="")
					.app-cont
						.app-title Скачайте приложение Basilic и получи <span class="type--mark">500 бонусов</span> после первого заказа уже сегодня
						.app-text Станьте участником программы лояльности и получайте десятки бонусов ежедневно. Теперь любимые блюда всегда в вашем смартфоне.
						.app-row
							a(href="#").app-row__el
								img(src="img/qr.png", alt="")
							a(href="#").app-row__el
								img(src="img/app-google.png", alt="")
							a(href="#").app-row__el
								img(src="img/app-apple.png", alt="")
						.app-adv
							.app-adv__el
								+icon("pocket","icon")
								span Оплачивайте заказы бонусами со смартфона
							.app-adv__el
								+icon("mail","icon")
								span Мгновенно узнавайте о новых блюдах, акциях и скидках
							.app-adv__el
								+icon("key","icon")
								span Доступ к полной информации о продуктах
							.app-adv__el
								+icon("like","icon")
								span Быстрый и удобный заказ в два клика

		.main-cont
			.section-title.mobile--hidden Завтраки
			.product-cont.mobile--hidden
				- for (var i=0;i< 6;i++)
					+product("item-3.jpg")
			.btn-row-mid.mobile--hidden
				a(href="#").product-more.btn--sm.btn--light.btn--mobile Показать все 45 блюд

			.section-title Акции и новости
			.sale-list
				- for (var i=0;i<4;i++)
					a(href="#").sale-el
						.sale-el__img(style="background-image:url('img/sale-"+(i+1)+".jpg')")
						.sale-el__title Съешь плов и выиграй 50 000 тенге!
						//.sale-el__text Друзья, у нас новый конкурс для вас! Это даже не конкурс, а целое состязание. С 21 по 25 марта каждый, кт..
						//.sale-el__date
							+icon("clock","icon icon--sm icon--right icon--gray")
							span Акция действует до 21 августа 2020 г
			.btn-row-mid
				a(href="#").product-more.btn--sm.btn--light.btn--mobile Показать все акции
			// seo text
			.title.title--md Добро пожаловать на «Территорию вкусной еды Basilic»
			.seo-text.text
